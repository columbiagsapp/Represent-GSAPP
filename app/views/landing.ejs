        <![endif]-->

        <!-- Add your site or application content here -->

        <div id="repgsapp-wrapper" class="edit-page">

          <% include header %>

          <main>
            <div id="carousel">

            </div>

          </main>


        </div><!-- #repgsapp-wrapper -->


        <% include scripts %>

        <script>
          $(document).ready(function(){

            $.get( "/api/get/programs", function( programs ) {

              $('#carousel').slick({
                slidesToShow: 3,
                slidesToScroll: 3
              });


              for(var p = 0; p < programs.length; p++){

                $.get( "/api/get/program/" + programs[p], function( data ) {
                  console.log();


                  if(data.images[0] != undefined){
                    console.log(<div class="item '+ data.program +'"><img src="'+ data.images[0].content.images.standard_resolution.url +'"><label>'+ data.program +'</label></div>);

                    $("#carousel").slickAdd('<div class="item '+ data.program +'"><img src="'+ data.images[0].content.images.standard_resolution.url +'"><label>'+ data.program +'</label></div>');

                  }
                });
              }// end for
            });// end original get


          });
        </script>
    </body>
