        <div class="gradient gradient-red"></div>

        <div id="repgsapp-wrapper" class="edit-page">

          <header>
            <% include header-top %>
            <% include header-bottom %>
          </header>

          <main>
            <div id="carousel">

            </div>

          </main>



        </div><!-- #repgsapp-wrapper -->


        <% include scripts %>

        <script>
          $(document).ready(function(){

            var programs = [];

            $.get( "/api/get/featured", function( images ) {

              var start = Math.floor( Math.random()*(images.length-2) );
              var end = start + 2;

              // extract programs from array
              for(var i = 0; i < images.length; i++){
                programs.push( images[i].programs[i] );

                if((i >= start) && (i <= end)){
                  console.log('<div class="item '+ images[i].programs[i] +'"><div class="image"><img data-lazy="'+ images[i].content.images.standard_resolution.url +'"><label>'+ images[i].programs[i] +'</label></div></div>');

                  $("#carousel").append('<div class="item '+ images[i].programs[i] +'"><div class="image"><img data-lazy="'+ images[i].content.images.standard_resolution.url +'"><label>'+ images[i].programs[i] +'</label></div></div>');

                }
              }// end for

              console.log('programs: ');
              console.dir(programs);


            });// end original get


          });
        </script>
    </body>
